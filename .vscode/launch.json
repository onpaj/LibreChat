{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Backend (Development)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/api/server/index.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nodemon"],
      "restart": true,
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Backend (Production)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/api/server/index.js",
      "env": {
        "NODE_ENV": "production"
      },
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Frontend (Vite Dev)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "frontend:dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "serverReadyAction": {
        "pattern": "Local:   http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build Frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "frontend"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build Packages",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "build:api"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "üöÄ Full Stack Development",
      "configurations": ["Backend (Development)", "Frontend (Vite Dev)"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "Main",
        "order": 1
      }
    },
    {
      "name": "üè≠ Production Mode",
      "configurations": ["Backend (Production)"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "Main",
        "order": 2
      }
    }
  ]
}
