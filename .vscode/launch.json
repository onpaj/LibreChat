{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Backend (Development)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/api/server/index.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nodemon"],
      "restart": true,
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Backend (Production)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/api/server/index.js",
      "env": {
        "NODE_ENV": "production"
      },
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Frontend (Vite Dev)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "frontend:dev"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "serverReadyAction": {
        "pattern": "Local:   http://localhost:([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build Frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "frontend"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Build Packages",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "build:api"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "üß™ Run All Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test:api"],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test",
        "CI": "true"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "üîß Run API Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/api/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--verbose",
        "--coverage"
      ],
      "cwd": "${workspaceFolder}/api",
      "env": {
        "NODE_ENV": "test",
        "CI": "true"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "‚öõÔ∏è Run Client Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/client/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--verbose",
        "--coverage"
      ],
      "cwd": "${workspaceFolder}/client",
      "env": {
        "NODE_ENV": "development",
        "CI": "true"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "üîê Run Epic 3 Access Control Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/api/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--verbose",
        "--coverage",
        "--testNamePattern=Epic 3",
        "--testPathPattern=(TimeWindowAccessControl|AccessControlIntegration|TimeWindowEdgeCases|AdminBypassTimeWindows|SessionTimeWindowManagement|TimeWindowAccessControlFlow)"
      ],
      "cwd": "${workspaceFolder}/api",
      "env": {
        "NODE_ENV": "test",
        "CI": "true"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "üèóÔ∏è Run Time Window Component Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/api/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--verbose",
        "--coverage",
        "--testPathPattern=TimeWindow(Controller|Service|Form|List|Manager)"
      ],
      "cwd": "${workspaceFolder}/api",
      "env": {
        "NODE_ENV": "test",
        "CI": "true"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "üéØ Run Single Test File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/api/node_modules/.bin/jest",
      "args": [
        "${relativeFile}",
        "--runInBand",
        "--verbose"
      ],
      "cwd": "${workspaceFolder}/api",
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "üîç Debug Single Test File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/api/node_modules/.bin/jest",
      "args": [
        "${relativeFile}",
        "--runInBand",
        "--verbose",
        "--detectOpenHandles"
      ],
      "cwd": "${workspaceFolder}/api",
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "stopOnEntry": false
    },
    {
      "name": "üé≠ Run E2E Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "playwright",
        "test",
        "--config=e2e/playwright.config.local.ts"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test",
        "TEST_EMAIL": "${input:testEmail}",
        "TEST_PASSWORD": "${input:testPassword}"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "üé≠ Run E2E Tests (Headed)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "playwright",
        "test",
        "--config=e2e/playwright.config.local.ts",
        "--headed"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test",
        "TEST_EMAIL": "${input:testEmail}",
        "TEST_PASSWORD": "${input:testPassword}"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "üî• Run Tests in Watch Mode",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/api/node_modules/.bin/jest",
      "args": [
        "--watch",
        "--verbose"
      ],
      "cwd": "${workspaceFolder}/api",
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "üìä Run Tests with Coverage Report",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/api/node_modules/.bin/jest",
      "args": [
        "--coverage",
        "--coverageReporters=text",
        "--coverageReporters=html",
        "--coverageDirectory=coverage",
        "--runInBand"
      ],
      "cwd": "${workspaceFolder}/api",
      "env": {
        "NODE_ENV": "test",
        "CI": "true"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "üö´ Run Failed Tests Only",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/api/node_modules/.bin/jest",
      "args": [
        "--onlyFailures",
        "--verbose"
      ],
      "cwd": "${workspaceFolder}/api",
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "üß™ Run Client Tests in Watch Mode",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/client/node_modules/.bin/jest",
      "args": [
        "--watch",
        "--verbose"
      ],
      "cwd": "${workspaceFolder}/client",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "üîß Run Specific API Test Pattern",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/api/node_modules/.bin/jest",
      "args": [
        "--runInBand",
        "--verbose",
        "--testNamePattern=${input:testPattern}"
      ],
      "cwd": "${workspaceFolder}/api",
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "üöÄ Full Stack Development",
      "configurations": ["Backend (Development)", "Frontend (Vite Dev)"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "Main",
        "order": 1
      }
    },
    {
      "name": "üè≠ Production Mode",
      "configurations": ["Backend (Production)"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "Main",
        "order": 2
      }
    },
    {
      "name": "üß™ Run All Test Suites",
      "configurations": ["üîß Run API Tests", "‚öõÔ∏è Run Client Tests"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "Testing",
        "order": 1
      }
    },
    {
      "name": "üîê Epic 3 Complete Test Suite",
      "configurations": ["üîê Run Epic 3 Access Control Tests", "üèóÔ∏è Run Time Window Component Tests"],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "Testing",
        "order": 2
      }
    }
  ],
  "inputs": [
    {
      "id": "testEmail",
      "description": "Test email for E2E tests",
      "default": "admin@test.com",
      "type": "promptString"
    },
    {
      "id": "testPassword",
      "description": "Test password for E2E tests",
      "default": "password123",
      "type": "promptString"
    },
    {
      "id": "testPattern",
      "description": "Test name pattern to run",
      "default": "Epic 3",
      "type": "promptString"
    }
  ]
}
